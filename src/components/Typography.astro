---
interface Props {
  tag: "h1" | "h2" | "h3" | "h4" | "h5" | "p";
  bold?: boolean;
  wrap?: "pretty" | "balance";
  id?: string;
}
const { tag: Tag, bold = false, wrap = "pretty", id } = Astro.props;
const className = `${bold ? "bold" : ""} wrap--${wrap}`;
---

<Tag class={className}>{id ? <x-anchor id={id} /> : undefined}<slot /></Tag>
<style style="scss">
  h1,
  h2,
  h3,
  h4,
  h5,
  p {
    --bold: 0;
    --wrap: pretty;
    all: unset;
    position: relative;
    display: block;
    padding: 0;
    font-weight: calc(500 + var(--bold));
    color: var(--color-text);
    text-wrap: var(--wrap);
  }
  x-anchor {
    position: absolute;
    top: var(--margin-nav);
  }
  .wrap {
    &--pretty {
      --wrap: pretty;
    }
    &--balance {
      --wrap: balance;
    }
  }
  h1 {
    font-size: 72px;
  }
  h2 {
    font-size: 48px;
  }
  h3 {
    font-size: 32px;
  }
  h4 {
    font-size: 24px;
  }
  h5 {
    font-size: 18px;
  }
  p {
    font-size: 16px;
    padding: 0;
    color: var(--color-text-alt);
    text-wrap: balance;
  }
  .bold {
    --bold: 200;
  }
</style>
